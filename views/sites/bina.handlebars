            const rows = document.querySelectorAll("#table-rows tr");
            if(rows.length === 0) return;
            const lastRow = rows[rows.length - 1];
            const lastInputs = lastRow.querySelectorAll("input, select");
            if(lastInputs.length === 0) return;
            const lastInput = lastInputs[lastInputs.length - 1];
            lastInput.addEventListener("keydown", function(event) {
                if(event.key === "Enter" || event.key === "Tab") {
                    // Son inputta Enter/Tab ile yeni satır açılmasını ENGELLE
                    event.preventDefault();
                }
            });
        }
        // Her satır eklendiğinde çağır:
        preventSubmitOnLastInput();

        // Toplam genel brüt alanı hesaplama ve gösterme fonksiyonu
        function updateTotalBrutArea() {
            let sum = 0;
            document.querySelectorAll('.genel-brut-alan').forEach(input => {
                const value = parseFloat(input.value.replace(',', '.'));
                if (!isNaN(value)) sum += value;
            });
            document.getElementById('totalBrutArea').textContent = sum > 0 ? `${sum} m²` : '0 m²';
        }
        // Başlangıçta ve her input eklendiğinde field'lara dinleyici ekle
        function addAreaListeners() {
            document.querySelectorAll('.genel-brut-alan').forEach(input => {
                input.removeEventListener('input', updateTotalBrutArea); // Tekrarlı eklenmesin
                input.addEventListener('input', updateTotalBrutArea);
            });
        }
    
    </script>  
