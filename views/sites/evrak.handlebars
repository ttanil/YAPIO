function fileToPdfBlob(file) {
  return new Promise((resolve, reject) => {
    if (file.type === "application/pdf") {
      // Zaten pdf, dosyayƒ± aynen kullan.
      resolve(file);
    } else if (file.type.startsWith("image/")) {
      // jsPDF ile resmi PDFe koyup blob yapalƒ±m
      const reader = new FileReader();
      reader.onload = function(e) {
        const imgData = e.target.result;
        const pdf = new window.jspdf.jsPDF(); // veya new jsPDF();
        pdf.addImage(imgData, 'JPEG', 10, 10, 180, 250);
        const pdfBlob = pdf.output("blob");
        resolve(new File([pdfBlob], file.name.replace(/\..+$/, ".pdf"), { type: "application/pdf" }));
      };
      reader.onerror = reject;
      reader.readAsDataURL(file);
    } else {
      // Diƒüer dosya t√ºrleri i√ßin uyarƒ±
      //alert("Sadece PDF veya resim y√ºkleyebilirsiniz!");
      reject("Desteklenmeyen dosya t√ºr√º");
    }
  });
}

